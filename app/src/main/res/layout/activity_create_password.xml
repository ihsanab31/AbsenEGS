<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ba"
    tools:context=".view.activity.CreatePasswordActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitetrans">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen120dp"
                android:padding="@dimen/dimen10dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:src="@drawable/ic_avatar"
                    android:layout_width="@dimen/dimen80dp"
                    android:layout_height="@dimen/dimen80dp"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen10dp"
                android:textColor="@color/biru"
                android:layout_width="@dimen/dimen300dp"
                android:layout_height="wrap_content"
                android:text="@string/basic_information"
                android:textSize="@dimen/textdimen14sp"/>

            <EditText
                android:padding="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen300dp"
                android:layout_height="@dimen/dimen40dp"
                android:backgroundTint="@color/biru"
                android:hint="@string/full_name"/>

            <EditText

                android:layout_marginTop="@dimen/dimen10dp"
                android:padding="@dimen/dimen5dp"
                android:layout_width="@dimen/dimen300dp"
                android:backgroundTint="@color/biru"
                android:layout_height="@dimen/dimen40dp"
                android:hint="@string/email"/>

            <TextView
                android:textColor="@color/biru"
                android:layout_marginTop="20dp"
                android:layout_width="@dimen/dimen300dp"
                android:layout_height="wrap_content"
                android:text="@string/private_informaion"
                android:textSize="@dimen/textdimen14sp"/>

            <EditText
                android:padding="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen300dp"
                android:backgroundTint="@color/biru"
                android:layout_height="@dimen/dimen40dp"
                android:hint="@string/password"/>

            <EditText
                android:padding="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen300dp"
                android:layout_height="@dimen/dimen40dp"
                android:backgroundTint="@color/biru"
                android:hint="@string/mobile"/>

            <Button
                android:textColor="#fff"
                android:layout_marginTop="@dimen/dimen10dp"
                android:text="@string/daftar"
                android:textSize="@dimen/textdimen16sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_circle_biru"
                android:layout_width="@dimen/dimen300dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen300dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="@dimen/dimen250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/biru"
                    android:text="@string/apakah_anda_memiliki_password"
                    android:textSize="@dimen/textdimen14sp"/>

                <ImageView
                    android:src="@drawable/ic_exclamation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>